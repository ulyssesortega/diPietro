/* ==========================================================================
   Styles by: Cameron Drake
   ========================================================================== */
body
  margin: 0
  line-height: 1.4
  height: 100%
  width: 100%

selection = #999999
::-moz-selection
  background: selection
  color: #fff
  text-shadow: none

::selection
  background: selection
  color: #fff
  text-shadow: none

.clearfix  
  clearfix()

/* =========================================================================
   Links
   =========================================================================*/
a
  color: #00e

a:visited
  color: #551a8b

a:hover
  color: #06e

a:focus
  outline: thin dotted

a:hover, a:active
  outline: 0

/* ==========================================================================
   General Styles
   ========================================================================== */
$navcolor = #ccc
$navhighlight = orange
$dipietrofonts = 'Helvetica Neue',Helvetica,Arial,sans-serif
$contentBlockWidth = 60em
$headerHeight = 11.25em
$footerHeight = 4.375em

body
  background-color: #000
  font-size: 0.75
  font-family: $dipietrofonts
  background-image: url('../img/wood.png')
  background-size: cover
  background-attachment: fixed
#blackOverlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0,0,0,0.75)
  z-index: 1001
  #underConstruction
    width: 80%
    height: 45%
    margin: auto
    margin-top: 7em
    background-color: rgba(255,255,224,1)
    z-index: 1002
    position: relative
    border-radius: 25px
    text-align: center
    #constrContainer
      width: 85%
      margin: auto
      h1
        font: small-caps 100 2em 'Arvo'
        color: #222
        padding-top: 2em
      p
        margin-top: 3em
        font: 100 1.5em 'Josefin Slab', serif
header
  width: 100%
  height: $headerHeight
  #logo
    width: 42.5em
    height: 8.8125em
    margin: auto
    margin-top: 1.25em
    background-image: url('../img/logo.png')
    background-size: cover
    background-repeat: none
    animation-delay: 0.5s
.navContainer
  width: 100%
  height: 4em
  position: fixed
  top: 0
  z-index: 100
  background: rgba(0,0,0,1)
  nav
    width: $contentBlockWidth
    margin: auto
    div
      display: inline-block
      zoom: 1
      *display: inline
    .col1
      width: 20%
      height: auto
      float: left
      #logoSmall
        width: 11em
        height: 1.5em
        margin-top: 1.25em
        background-image: url('../img/small-logo.png')
        background-repeat: none
        background-size: cover
        opacity: 1
    .col2
      width: 60%
      height: auto
      float: left
      margin: auto
      ul
        list-style-type: none
        li
          margin: 0
          margin-right: 0.5em
          font: small-caps 100 1.5em $dipietrofonts
          float: left
          animation-duration: 0.35s !important
          text-align: justify
          a
            color: $navcolor
            text-decoration: none
          a:visited
            color: $navcolor
          a:hover
            color: $navhighlight
    .col3
      width: 20%
      float: left
      height: auto
      text-align: center

/* ======================================================================
   Index Styles
   ======================================================================*/
#slideshow
  width: 40.9375em
  height: 26.5625em
  margin: 4.5em auto
  position: relative
  padding: 0.625em
  box-shadow: 0 0 1.25em rgba(0,0,0,0.4)
  div 
    position: absolute
    top: 0.625em
    left: 0.625em
    right: 0.625em
    bottom: 0.625em
  #first
    background-image: url('../img/main1.png')
  #second
    background-image: url('../img/main2.png')
  #third
    background-image: url('../img/main3.png')
  #fifth
    background-image: url('../img/main4.png')
  #fourth
    background-image: url('../img/main5.png')

#featured
  width: $contentBlockWidth
  margin: auto
  margin-top: 3.125em
  .classContainers
    width: ($contentBlockWidth/3)
    float: left
    text-align: center
    h3
      font: small-caps 1.5em $dipietrofonts
      color: #fff 
    .feature-small
      width: 12.5em
      height: 10em
      background-size: cover
      margin: auto
      animation-duration: 0.75s
      animation-delay: 0s
    #feature1
      background-image: url('../img/1.png')
    #feature2
      background-image: url('../img/2.png')
    #feature3
      background-image: url('../img/3.png')

/* ======================================================================
   Classes Styles
   ======================================================================*/
#classes
  width: $contentBlockWidth
  margin: 4.5em auto
  padding: 0
  .classCat
    width: 40em
    height: 25em
    margin: auto
    display: block
    margin: auto
    position: relative
    h3 
      color: #fff
      font: bold 4.6875em sans-serif
      position: absolute
      right: 1.25em
      top: 0.2em
    p
      width: 12em
      height: 1.5em
      color: #222
      background-color: rgba(255,255,255,0.5)
      font: small-caps 1.5em sans-serif
      float: right
      position: absolute
      text-align: center
      bottom: 2em
      right: 1.25em
  #cut
    background-image: url('../img/cut.png')
  #color
    background-image: url('../img/color.png')
  #etc
    background-image: url('../img/etc.png')
/* ======================================================================
   FAQ
   ======================================================================*/
#FAQ
  width: $contentBlockWidth
  margin: 4.5em auto
  background: url('../img/about.jpg')
  height: 90em
  background-size: cover
  #faq_container
    width: $contentBlockWidth
    height: 90em
    margin: auto
    background: rgba(0,0,0,0.85)
    overflow: scroll
  h2
    font: 100 2em "Josefin"
    color: #fff
    text-align: center
  h3 
    font: 100 1.2em 'Arvo'
    color: #fff
    margin: auto
    margin-top: 1em
    width: 45em
  p
    font: 200 0.9em $dipietrofonts
    color: #ccc
    margin: auto
    margin-top: 1em
    width: 45em
/* ==================================================================== 
  In Salon
  ======================================================================*/
#insalon
  margin: 4.5em auto
  width: $contentBlockWidth
  background: url('../img/about.jpg')
  height: 90em
  background-size: cover
  text-align: center
  #insalon_container
    width: $contentBlockWidth
    height: 90em
    margin: auto
    background: rgba(0,0,0,0.85)
    overflow: scroll
    h2
      font: italic small-caps 100 2em "Josefin"
      color: #fff
      margin: 1em
    p
      font: 200 1em $dipietrofonts
      color: #ccc
      width: 40em
      margin: auto
    .insalon
      background: url('../img/insalon.png')
      width: 40.9375em
      height: 26.5625em
      margin: 4.5em auto
      position: relative

/* ======================================================================
   About Styles
   ======================================================================*/
#aboutUs
  width: $contentBlockWidth
  margin: 4.5em auto
  text-align: center
  background: url('../img/about.jpg')
  height: 90em
  background-size: cover
  #about_container
    width: $contentBlockWidth
    height: 90em
    margin: auto
    background: rgba(0,0,0,0.85)
    h2
      font: italic small-caps 100 2em "Arvo"
      color: #fff
      margin: 1em
    p
      font: 100 1.0em "Arvo"
      color: #ccc
      margin: 1em

/* ======================================================================
   Educators  Styles
   ======================================================================*/
#educators
  width: 100%
  text-align: center
  background: rgba(255,255,255,0.75)
  margin: 4.5em auto
  #educators_container
    height: 50em
    width: $contentBlockWidth
    margin: auto
    h2
      font: italic small-caps 100 1.5em "Helvetica Neue"
      color #fff
    .teachers
      width: 56em
      margin: auto
      figure
        margin: 0.5em
        width: 13em
        height: 13em
        background-size: cover
        float: left
        overflow: hidden
        display: block
        position: relative
        figcaption
          width: 100%
          height: 4.6875em
          position: absolute
          background: #000
          color: #fff
          opacity: 0
          bottom: -4.6875em
          z-index: 50
          transition: all 500ms cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */
          transition-timing-function: cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */		
  	    h2
          font: 100 1.5em "Helvetica Neue"
          margin: 0
        p
          font 100 1em "Helvetica Neue"
          line-height:1
      figure:hover
        figcaption
          opacity: 0.75
          bottom: -1px
    #shelley
      background-image:url('../img/teachers_thumbs/shelley.png')
    #amita
      background-image:url('../img/teachers_thumbs/amita.png')
    #cares
      background-image:url('../img/teachers_thumbs/cares.png')
    #debi
      background-image:url('../img/teachers_thumbs/debi.png')  
    #jay
      background-image:url('../img/teachers_thumbs/jay.png')  
    #moises
      background-image:url('../img/teachers_thumbs/moises.png')  
    #emily
      background-image:url('../img/teachers_thumbs/emily.png')  
    #ali
      background-image:url('../img/teachers_thumbs/ali.png')  
    #brian
      background-image:url('../img/teachers_thumbs/brian.png')  
    #yureesh
      background-image:url('../img/teachers_thumbs/yureesh.png')  
    #renee
      background-image:url('../.png/renee.png')  

/* ======================================================================
   Contact Styles
   ======================================================================*/
#contact
  width: 100%
  margin: 4.5em auto
  font-size: 0.75em
  line-height: 1
  background: rgba(255,255,255,0.8)
  #contactContainer
    width: $contentBlockWidth
    margin: auto
    height: 40em
    #contactform
      float: left
      width: ($contentBlockWidth/2)
      form
        $formSize = 15.625em
        width: $formSize
        input
          width: $formSize
        textarea
          width: $formSize
        input[type="submit"]
          width: 2.5em
    #location
      float: right
      width: ($contentBlockWidth/2)
      text-align: center
      h1
        text-align: left
      hgroup
        width: 350px
      .alignRight
        float: right
        list-style: none
        text-align: right
      .alignLeft
        float: left
      img
        width: 250px
        margin: auto
      p#copy 
        color: #000
        font: small-caps 100 1em $dipietrofonts
        float: left
        margin-top: 1.875em
      ul#social
        width: 15.625em
        list-style-type: none
        margin-top: 1em
        float: right
        li
          width: 3.125em
          height: 3.125em
          float: left
          margin-right: 0.625em
          animation-duration: 0.75s
          animation-delay: 0s
  	  #facebook
  	    background-image: url('../img/facebook.png')
  	  #twitter
  	    background-image: url('../img/twitter.png')
  	  #tumblr
  	    background-image: url('../img/tumblr.png')
  	  #hairbranded
  	    background-image: url('../img/tumblr.png')

/* ======================================================================
   Media Queries
   ======================================================================*/
@media (min-device-width : 768px) and (max-device-width : 1024px)
  #blackOverlay
    position: fixed
    top: 0
    left: 0
    #underConstruction
      width: 85%
      height: 70%
      margin: auto
      margin-top: 3em
      #constrContainer
        width: 75%
        margin: auto
        h1
          font: small-caps 100 2em 'Arvo'
          color: #222
          padding-top: 3.5em
        p
          margin-top: 1em
          font: 100 1.5em 'Josefin Slab', serif
@media (min-device-width : 320px) and (max-device-width : 480px) 
  #blackOverlay
    position: fixed
    top: 0
    left: 0
    #underConstruction
      width: 85%
      height: 90%
      margin: auto
      margin-top: 5%
      #constrContainer
        width: 90%
        margin: auto
        h1
          font: small-caps 100 1.2em 'Arvo'
          color: #222
          padding-top: 2em
        p
          margin-top: 1em
          font: 100 1em 'Josefin Slab', serif