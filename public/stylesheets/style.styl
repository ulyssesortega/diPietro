/* ======================================================================
   Contact Styles
   ======================================================================*/
#contact
  width: 100%
  margin: auto
  padding-top: 4.5em
  background: #fff
  font-size: 0.75em
  line-height: 1
  #contactContainer
    width: $contentBlockWidth
    margin: auto
    #contactform
      float: left
      width: ($contentBlockWidth/2)
      form
        $formSize = 15.625em
        width: $formSize
        input
          width: $formSize
        textarea
          width: $formSize
        input[type="submit"]
          width: 2.5em
    #location
      float: right
      width: ($contentBlockWidth/2)
      text-align: center
      h1
        text-align: left
      hgroup
        width: 350px
      .alignRight
        float: right
        list-style: none
        text-align: right
      .alignLeft
        float: left
      img
        width: 250px
        margin: auto
      p#copy 
        color: #000
        font: small-caps 100 1em $dipietrofonts
        float: left
        margin-top: 1.875em
      ul#social
        width: 15.625em
        list-style-type: none
        margin-top: 1em
        float: right
        li
          width: 3.125em
          height: 3.125em
          float: left
          margin-right: 0.625em
          animation-duration: 0.75s
          animation-delay: 0s
  	  #facebook
  	    background-image: url('../img/facebook.png')
  	  #twitter
  	    background-image: url('../img/twitter.png')
  	  #tumblr
  	    background-image: url('../img/tumblr.png')
  	  #hairbranded
  	    background-image: url('../img/tumblr.png')

