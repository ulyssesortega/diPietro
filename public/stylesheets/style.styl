/* ======================================================================
   Educators  Styles
   ======================================================================*/
#educators
  width: $contentBlockWidth
  margin: auto
  .teachers
    width: 275px
    height: 275px
    background-size: cover
    float: left
    margin-right: 10px
    overflow: hidden
    display: block
    position: relative
    margin-top: 10px
    figcaption
      position: absolute
      background: #000
      color: #fff
      opacity: 0
      width: 100%
      height: 75px
      bottom: -75px
      z-index: 1000
      transition: all 500ms cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */
      transition-timing-function: cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */		
	  h2, p
	    padding-left: 10px
	    line-height: 1
	    color: $navcolor
  .teachers:hover
