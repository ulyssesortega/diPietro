/* ==========================================================================
   Styles by: Cameron Drake
   ========================================================================== */
body
  margin: 0
  line-height: 1.4
  height: 100%
  width: 100%
  background-image: url('../img/wood.png')
  background-size: cover

selection = #999999
::-moz-selection
  background: selection
  color: #fff
  text-shadow: none

::selection
  background: selection
  color: #fff
  text-shadow: none

.clearfix  
  clearfix()

/* =========================================================================
   Links
   =========================================================================*/
a
  color: #00e

a:visited
  color: #551a8b

a:hover
  color: #06e

a:focus
  outline: thin dotted

a:hover, a:active
  outline: 0

/* ==========================================================================
   General Styles
   ========================================================================== */
$navcolor = #ccc
$navhighlight = orange
$dipietrofonts = 'Helvetica Neue',Helvetica,Arial,sans-serif
$contentBlockWidth = 60em
$headerHeight = 11.25em
$footerHeight = 4.375em

body
  background-color: #000
  font-size: 0.75
  font-family: $dipietrofonts

#blackOverlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(224,225,221,0.8)
  z-index: 1001
#overlayMessage
  display: none
  text-align: left
  position: absolute
  top: 1%
  left: 23%
  width: 50%
  height: 700px
  padding: 16px
  border:   5px solid red
  background-color: white
  z-index: 1002
  overflow: auto
  -webkit-box-shadow: 0px 0px 23px 0px #000
header
  width: 100%
  height: $headerHeight
  #logo
    width: 42.5em
    height: 8.8125em
    margin: auto
    margin-top: 1.25em
    background-image: url('../img/logo.png')
    background-size: cover
    background-repeat: none
    animation-delay: 0.5s
.navContainer
  width: 100%
  height: 4em
  position: fixed
  top: 0
  z-index: 100
  background: rgba(0,0,0,1)
  nav
    width: $contentBlockWidth
    margin: auto
    div
      display: inline-block
      zoom: 1
      *display: inline
    .col1
      width: 20%
      height: auto
      float: left
      #logoSmall
        width: 11em
        height: 1.5em
        margin-top: 1.25em
        background-image: url('../img/small-logo.png')
        background-repeat: none
        background-size: cover
        opacity: 1
    .col2
      width: 60%
      height: auto
      float: left
      margin: auto
      ul
        list-style-type: none
        li
          width: 24%
          margin: 0
          font: small-caps 100 1.5em $dipietrofonts
          float: left
          animation-duration: 0.35s !important
          text-align: justify
          a
            color: $navcolor
            text-decoration: none
          a:visited
            color: $navcolor
          a:hover
            color: $navhighlight
    .col3
      width: 20%
      float: left
      height: auto
      text-align: center

/* ======================================================================
   Index Styles
   ======================================================================*/
#slideshow
  width: 40.9375em
  height: 26.5625em
  margin: 4.5em auto
  position: relative
  padding: 0.625em
  box-shadow: 0 0 1.25em rgba(0,0,0,0.4)
  div 
    position: absolute
    top: 0.625em
    left: 0.625em
    right: 0.625em
    bottom: 0.625em
  #first
    background-image: url('../img/main.png')
  #second
    background-image: url('../img/main2.png')
  #third
    background-image: url('../img/main3.png')

#featured
  width: $contentBlockWidth
  margin: auto
  margin-top: 3.125em
  .classContainers
    width: ($contentBlockWidth/3)
    float: left
    text-align: center
    h3
      font: small-caps 1.5em $dipietrofonts
      color: #fff 
    .feature-small
      width: 12.5em
      height: 10em
      background-size: cover
      margin: auto
      animation-duration: 0.75s
      animation-delay: 0s
    #feature1
      background-image: url('../img/1.png')
    #feature2
      background-image: url('../img/2.png')
    #feature3
      background-image: url('../img/3.png')

/* ======================================================================
   Classes Styles
   ======================================================================*/
#classes
  width: $contentBlockWidth
  margin: 4.5em auto
  padding: 4.5em 0 0 0
  .classCat
    width: 42.6875em
    height: 23.0625em
    display: block
    margin: 3.125em auto
    position: relative
    h3 
      color: #fff
      font: bold 4.6875em sans-serif
      position: absolute
      right: 1.25em
    p
      width: 15.625em
      height: 2.1875em
      color: #fff
      background-color: rgba(255,255,255,0.3)
      font: small-caps 1.5em sans-serif
      float: right
      position: absolute
      padding-left: 2.1875em
      bottom: 3.125em
      right: 1.25em
  #cut
    background-image: url('../img/cut.png')
  #color
    background-image: url('../img/color.png')
  #etc
    background-image: url('../img/etc.png')
/* ======================================================================
   About Styles
   ======================================================================*/
#aboutUs
  width: $contentBlockWidth
  margin: auto
  padding-top: 4.5em
  text-align: center
  h2
    font: italic small-caps 100 2em "Georgia"
    color: #fff
  p
    font: 100 1.0em "Helvetica Neue"
    color: #ccc

