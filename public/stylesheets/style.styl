/* ==========================================================================
   Styles by: Cameron Drake
   ========================================================================== */
body
  margin: 0
  line-height: 1.4
  height: 100%
  width: 100%
  background-image: url('../img/wood.png')
  background-size: cover

selection = #999999
::-moz-selection
  background: selection
  color: #fff
  text-shadow: none

::selection
  background: selection
  color: #fff
  text-shadow: none

.clearfix  
  clearfix()

/* =========================================================================
   Links
   =========================================================================*/
a
  color: #00e

a:visited
  color: #551a8b

a:hover
  color: #06e

a:focus
  outline: thin dotted

a:hover, a:active
  outline: 0

/* =========================================================================
   Animation
   =========================================================================*/
animated(n)
  animation-duration: n
  animation-fill-mode: both

/* ==========================================================================
   General Styles
   ========================================================================== */
$navcolor = #ccc
$navhighlight = #666
$dipietrofonts = 'Helvetica Neue',Helvetica,Arial,sans-serif
$contentBlockWidth = 869px

body
  background-color: #000
  font-size: 0.75em
  font-family: $dipietrofonts

header
  width: $contentBlockWidth
  margin: auto
  height: auto
  #logo
    margin-top: 50px
    background-image: url('../img/logo.png')
    background-repeat: none
    height: 180px
  
  nav
    width: $contentBlockWidth
    margin: auto
    margin-top: 30px
    ul
      list-style-type: none
      li
        font: small-caps 100 24px $dipietrofonts
        float: left
        margin-left:40px // I need to develop a better method for centering these items
        a
          color: $navcolor
          text-decoration: none
        a:visited
          color: $navcolor
        a:hover
          animated(1s)
          color: $navhighlight
          text-decoration: underline
/* ======================================================================
   Index Styles
   ======================================================================*/
#featured
  background-image: url('../img/main.png')
  width: 655px
  height: 437px
  margin: auto
  margin-top: 50px

footer
  width: $contentBlockWidth
  height: 200px
  margin: auto
  margin-top: 50px
  h3
    font: small-caps bold 34px $dipietrofonts
    color: #fff 
    padding: 20px 0px 0px 20px
  .feature-small
    width: 200px
    height: 160px
    background-size: cover
    float: left
    margin-right: 134.5px
  #feature1
    background-image: url('../img/1.png')
  #feature2
    background-image: url('../img/2.png')
  #feature3
    background-image: url('../img/3.png')
    margin-right: 0
/* ======================================================================
   Contact Styles
   ======================================================================*/
#contact
  width: $contentBlockWidth
  height: 700px  
  margin: auto
  margin-top: 50px
  background: #fff
  #contactform
    float: left
    width: ($contentBlockWidth/2)
    margin-top: 50px
    form
      $formSize = 250px
      width: $formSize
      margin-left: 50px
      input
        width: $formSize
      textarea
        width: $formSize
      input[type="submit"]
        width: 40px
  #location
    float: right
    width: ($contentBlockWidth/2)
    margin-top: 50px
    hgroup
      width: 350px
    .alignRight
      float: right
      list-style: none
      text-align: right
    .alignLeft
      float: left
/* ======================================================================
