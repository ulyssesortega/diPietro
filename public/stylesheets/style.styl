/* ==========================================================================
   Styles by: Cameron Drake
   ========================================================================== */
body
  margin: 0
  line-height: 1.4
  height: 100%
  width: 100%
  background-image: url('../img/wood.png')
  background-size: cover

selection = #999999
::-moz-selection
  background: selection
  color: #fff
  text-shadow: none

::selection
  background: selection
  color: #fff
  text-shadow: none

.clearfix  
  clearfix()

/* =========================================================================
   Links
   =========================================================================*/
a
  color: #00e

a:visited
  color: #551a8b

a:hover
  color: #06e

a:focus
  outline: thin dotted

a:hover, a:active
  outline: 0

/* ==========================================================================
   General Styles
   ========================================================================== */
$navcolor = #ccc
$navhighlight = orange
$dipietrofonts = 'Helvetica Neue',Helvetica,Arial,sans-serif
$contentBlockWidth = 869px

body
  background-color: #000
  font-size: 0.75em
  font-family: $dipietrofonts

header
  width: $contentBlockWidth
  margin: auto
  height: auto
  #logo
    margin-top: 50px
    background-image: url('../img/logo.png')
    background-repeat: none
    height: 180px
  
  nav
    width: $contentBlockWidth
    margin: auto
    margin-top: 30px
    ul
      list-style-type: none
      li
        font: small-caps 100 24px $dipietrofonts
        float: left
        margin-left:40px // I need to develop a better method for centering these items
        a
          color: $navcolor
          text-decoration: none
        a:visited
          color: $navcolor
        a:hover
          color: $navhighlight
footer
  width: 100%
  position: fixed
  bottom: 0
  height: 50px
  background: #000
  .footContainer
    width: $contentBlockWidth
    margin: auto
    p#copy 
      color: #ccc
      font: small-caps 100 1.5em $dipietrofonts
      float: left
    ul#social
      list-style-type: none
      margin-top:15px
      float: right
      li
        float: left
        
  
/* ======================================================================
   Index Styles
   ======================================================================*/
#slideshow
    margin: 50px auto
    position: relative
    width: 655px
    height: 437px
    padding: 10px
    box-shadow: 0 0 20px rgba(0,0,0,0.4)
#slideshow > div 
    position: absolute
    top: 10px
    left: 10px
    right: 10px
    bottom: 10px
  #first
    background-image: url('../img/main.png')
  #second
    background-image: url('../img/main2.png')
  #third
    background-image: url('../img/main3.png')

#featured
  width: $contentBlockWidth
  margin: auto
  margin-top: 50px
  .classContainers
    float: left
    width: ($contentBlockWidth/3)
    text-align: center
    h3
      font: small-caps 24px $dipietrofonts
      color: #fff 
    .feature-small
      width: 200px
      height: 160px
      background-size: cover
      margin: auto
    #feature1
      background-image: url('../img/1.png')
    #feature2
      background-image: url('../img/2.png')
    #feature3
      background-image: url('../img/3.png')

/* ======================================================================
   Contact Styles
   ======================================================================*/
#contact
  width: $contentBlockWidth
  height: 700px  
  margin: auto
  margin-top: 50px
  background: #fff
  #contactform
    float: left
    width: ($contentBlockWidth/2)
    margin-top: 50px
    form
      $formSize = 250px
      width: $formSize
      margin-left: 50px
      input
        width: $formSize
      textarea
        width: $formSize
      input[type="submit"]
        width: 40px
  #location
    float: right
    width: ($contentBlockWidth/2)
    margin-top: 50px
    hgroup
      width: 350px
    .alignRight
      float: right
      list-style: none
      text-align: right
    .alignLeft
      float: left
/* ======================================================================
   About Styles
   ======================================================================*/
#aboutUs
  width: $contentBlockWidth
  margin: auto
  margin-top: 50px
  text-align: center
  h2
    font: italic small-caps 100 4em "Georgia"
    color: #fff
    margin: auto
  p
    font: 100 1.5em "Helvetica Neue"
    color: #ccc

/* ======================================================================
   Classes Styles
   ======================================================================*/
#classes
  width: $contentBlockWidth
  margin: auto
  margin-top: 50px
  .classCat
    display: block
    width: 683px
    height: 369px
    margin: auto
    margin-top: 50px
    position: relative
    h3 
      color: #fff
      font: bold 75px sans-serif
      position: absolute
      top: 50px
      right: 20px
    p
      color: #fff
      background-color: rgba(255,255,255,0.3)
      width: 250px
      height: 35px
      font: small-caps 24px sans-serif
      float: right
      position: absolute
      padding-left: 35px
      bottom: 50px
      right: 20px
  #cut
    background-image: url('../img/cut.png')
  #color
    background-image: url('../img/color.png')
  #etc
    background-image: url('../img/etc.png')

/* ======================================================================
   Educators  Styles
   ======================================================================*/
#educators
  width: $contentBlockWidth
  margin: auto
  .teachers
    width: 275px
    height: 275px
    background-size: cover
    float: left
    margin-right: 10px
    overflow: hidden
    display: block
    position: relative
    margin-top: 10px
    figcaption
      position: absolute
      background: #000
      color: #fff
      opacity: 0
      width: 100%
      height: 75px
      bottom: -75px
      z-index: 1000
      transition: all 500ms cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */
      transition-timing-function: cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */		
	  h2, p
	    padding-left: 10px
	    line-height: 1
	    color: #ccc
  .teachers:hover
    figcaption
      opacity: 0.75
      bottom: 0
