/* ==========================================================================
   Styles by: Cameron Drake
   ========================================================================== */
body
  margin: 0
  line-height: 1.4
  height: 100%
  width: 100%

selection = #999999
::-moz-selection
  background: selection
  color: #fff
  text-shadow: none

::selection
  background: selection
  color: #fff
  text-shadow: none

.clearfix  
  clearfix()

/* =========================================================================
   Links
   =========================================================================*/
a
  color: #00e

a:visited
  color: #551a8b

a:hover
  color: #06e

a:focus
  outline: thin dotted

a:hover, a:active
  outline: 0

/* ==========================================================================
   General Styles
   ========================================================================== */
$navcolor = #ccc
$navhighlight = rgba(55,176,230,1)
$dipietrofonts = 'Helvetica Neue',Helvetica,Arial,sans-serif
$contentBlockWidth = 60em
$headerHeight = 11.25em
$footerHeight = 4.375em
@font-face { font-family: Blair; src: url('../343.ttf'); } 

// General Background Mixins
pictureBackground(n)
  width: $contentBlockWidth
  margin: auto
  text-align: center
  background: url('../img/about.jpg')
  height: n
  background-size: cover
  .container
    width: $contentBlockWidth
    height: 90em
    margin: auto
    background: rgba(0,0,0,0.85)
    overflow: scroll
whiteBackground(n)
  width: 100%
  text-align: center
  background: rgba(255,255,255,0.75)
  margin: auto
  .container
    height: n
    width: $contentBlockWidth
    margin: auto
body
  background-color: #000
  font-size: 0.75
  font-family: $dipietrofonts
  background-image: url('../img/wood.png')
  background-size: cover
  background-attachment: fixed
#blackOverlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0,0,0,0.75)
  z-index: 1001
  #underConstruction
    width: 80%
    height: 45%
    margin: auto
    margin-top: 7em
    background-color: rgba(255,255,224,1)
    z-index: 1002
    position: relative
    border-radius: 25px
    text-align: center
    #constrContainer
      width: 85%
      margin: auto
      h1
        font: small-caps 100 2em 'Arvo'
        color: #222
        padding-top: 2em
      p
        margin-top: 3em
        font: 100 1.5em 'Josefin Slab', serif
header
  width: 100%
  height: $headerHeight
  #logo
    width: 42.5em
    height: 9.6em
    margin: auto
    margin-top: 1.25em
    background-image: url('../img/logo.png')
    background-size: cover
    background-repeat: none
    animation-delay: 0.5s
/* ==========================================================================
   Navigation
   ========================================================================== */
.navContainer
  width: 100%
  height: 4em
  nav
    width: 40em
    margin: auto
    ul
      list-style-type: none
      margin: auto
      li
        margin: 0
        margin-right: 0.5em
        font: small-caps 100 1.2em Blair
        float: left
        animation-duration: 0.35s !important
        text-align: justify
        a
          color: $navcolor
          text-decoration: none
        a:visited
          color: $navcolor
        a:hover
          color: $navhighlight
/* ======================================================================
   Index Styles
   ======================================================================*/
#slideshow
  width: 40.9375em
  height: 26.5625em
  margin: auto
  position: relative
  box-shadow: 0 0 1.25em rgba(0,0,0,0.4)
  div 
    position: absolute
    top: 0.625em
    left: 0.625em
    right: 0.625em
    bottom: 0.625em
  #first
    background-image: url('../img/main1.png')
  #second
    background-image: url('../img/main2.png')
  #third
    background-image: url('../img/main3.png')
  #fifth
    background-image: url('../img/main4.png')
  #fourth
    background-image: url('../img/main5.png')

#featured
  width: $contentBlockWidth
  margin: auto
  .classContainers
    width: ($contentBlockWidth/3)
    float: left
    text-align: center
    h3
      font: small-caps 1.5em $dipietrofonts
      color: #fff 
    .feature-small
      width: 12.5em
      height: 10em
      background-size: cover
      margin: auto
      animation-duration: 0.75s
      animation-delay: 0s
    #feature1
      background-image: url('../img/cut_thumb.png')
    #feature2
      background-image: url('../img/color_thumb.png')
    #feature3
      background-image: url('../img/etc_thumb.png')

/* ======================================================================
   Classes Styles
   ======================================================================*/
#classes
  width: $contentBlockWidth
  margin: auto
  padding: 0
  .classCat
    width: 40em
    height: 25em
    margin: auto
    display: block
    position: relative
    margin-bottom: 1em
    h3 
      color: #fff
      font: bold 4.6875em sans-serif
      position: absolute
      right: 1.25em
      top: 0.2em
    p
      width: 12em
      height: 1.5em
      color: #222
      background-color: rgba(255,255,255,0.5)
      font: small-caps 1.5em sans-serif
      float: right
      position: absolute
      text-align: center
      bottom: 2em
      right: 1.25em
  #cut
    background-image: url('../img/cut.png')
  #color
    background-image: url('../img/color.png')
  #etc
    background-image: url('../img/etc.png')
/* ======================================================================
   FAQ
   ======================================================================*/
#FAQ
    pictureBackground(90em)
    h2
      font: 100 2em "Josefin"
      color: #fff
      text-align: center
    h3 
      font: 100 1.2em 'Arvo'
      color: #fff
      margin: auto
      margin-top: 1em
      width: 45em
    p
      font: 200 0.9em $dipietrofonts
      color: #ccc
      margin: auto
      margin-top: 1em
      width: 45em
/* ==================================================================== 
  In Salon
  ======================================================================*/
#insalon
    pictureBackground(90em)
    h2
      font: italic small-caps 100 2em "Josefin"
      color: #fff
      margin: 1em
    p
      font: 200 1em $dipietrofonts
      color: #ccc
      width: 40em
      margin: auto
    .insalon
      background: url('../img/insalon.png')
      width: 40.9375em
      height: 26.5625em
      margin: auto
      position: relative
/* ==========================================================================
   Class Mixin
   ========================================================================== */    
classBackground(n)
  width: $contentBlockWidth
  margin: auto
  text-align: center
  background: url(n)
  height: 90em
  background-size: cover
  .container
    width: $contentBlockWidth
    height: 90em
    margin: auto
    background: rgba(0,0,0,0.85)
    overflow: scroll
    .classes
      margin: 0.5em auto
      width: 800px
      .thumbs
        width: 200px
        height: 300px
        float: left
      .details
        width: 35em
        height: 300px
        float: left
        margin: 0 0 0 1em
        text-align: left
        h1
          color: #fff
          font: 100 2em $dipietrofonts
        h2
          color: #666
          font: italic small-caps 100 1.1em "Josefin"
        p
          color: #ccc
          font 100 1em $dipietrofonts
        h3
          color: #666
// CUT
#cut
    classBackground('../img/about.jpg')
// COLOR
#color
    classBackground('../img/about.jpg')
// ETC
#etc
    classBackground('../img/about.jpg') // TODO: format that image
    
/* ======================================================================
   About Styles
   ======================================================================*/
#aboutUs
    pictureBackground(90em)
    img
      float: left
      margin: 0 1em
    h2
      font: italic small-caps 100 2em "Arvo"
      color: #fff
      margin: 1em 
    p
      font: 100 1.0em "Arvo"
      color: #ccc
      margin: 1em

/* ======================================================================
   Educators  Styles
   ======================================================================*/
#educators
    whiteBackground(50em)
    h2
      font: italic small-caps 100 1.5em "Helvetica Neue"
      color #000
    figure
      margin: 0.5em
      width: 13em
      height: 13em
      background-size: cover
      float: left
      overflow: hidden
      display: block
      position: relative
      figcaption
        width: 100%
        height: 4.6875em
        position: absolute
        background: #000
        color: #fff
        opacity: 0
        bottom: -4.6875em
        z-index: 50
        transition: all 500ms cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */
        transition-timing-function: cubic-bezier(0.420, 0.000, 0.580, 1.000) /* ease-in-out */		
      h2
        font: 100 1.2em "Helvetica Neue"
        margin: 0
        color: #fff
      p
        font 100 1em "Helvetica Neue"
        line-height:1
    figure:hover
      figcaption
        opacity: 0.75
        bottom: -1px
    #shelley
      background-image:url('../img/teachers_thumbs/shelley.png')
    #amita
      background-image:url('../img/teachers_thumbs/amita.png')
    #cares
      background-image:url('../img/teachers_thumbs/cares.png')
    #debi
      background-image:url('../img/teachers_thumbs/debi.png')  
    #jay
      background-image:url('../img/teachers_thumbs/jay.png')  
    #moises
      background-image:url('../img/teachers_thumbs/moises.png')  
    #emily
      background-image:url('../img/teachers_thumbs/emily.png')  
    #ali
      background-image:url('../img/teachers_thumbs/ali.png')  
    #brian
      background-image:url('../img/teachers_thumbs/brian.png')  
    #yureesh
      background-image:url('../img/teachers_thumbs/yureesh.png')  
    #renee
      background-image:url('../img/teachers_thumbs/renee.png')  

/* ======================================================================
   Contact Styles
   ======================================================================*/
#contact
    whiteBackground(50em)
    #contactform
      float: left
      width: ($contentBlockWidth/2)
      form
        $formSize = 15.625em
        width: $formSize
        input
          width: $formSize
        textarea
          width: $formSize
        input[type="submit"]
          width: 2.5em
    #location
      float: right
      width: ($contentBlockWidth/2)
      text-align: center
      h1
        text-align: left
      hgroup
        width: 350px
      .alignRight
        float: right
        list-style: none
        text-align: right
      .alignLeft
        float: left
      img
        width: 250px
        margin: auto
      p#copy 
        color: #000
        font: small-caps 100 1em $dipietrofonts
        float: left
        margin-top: 1.875em

/* ======================================================================
   Media Queries
   ======================================================================*/
@media (min-device-width : 768px) and (max-device-width : 1024px)
  #blackOverlay
    position: fixed
    top: 0
    left: 0
    #underConstruction
      width: 85%
      height: 70%
      margin: auto
      margin-top: 3em
      #constrContainer
        width: 75%
        margin: auto
        h1
          font: small-caps 100 2em 'Arvo'
          color: #222
          padding-top: 3.5em
        p
          margin-top: 1em
          font: 100 1.5em 'Josefin Slab', serif
@media (min-device-width : 320px) and (max-device-width : 480px) 
  #blackOverlay
    position: fixed
    top: 0
    left: 0
    #underConstruction
      width: 85%
      height: 90%
      margin: auto
      margin-top: 5%
      #constrContainer
        width: 90%
        margin: auto
        h1
          font: small-caps 100 1.2em 'Arvo'
          color: #222
          padding-top: 2em
        p
          margin-top: 1em
          font: 100 1em 'Josefin Slab', serif